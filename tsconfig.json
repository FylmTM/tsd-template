{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "outDir": "./",
        "types": ["@ts-defold/types"]
    },
    "include": [
        "src/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "transpileOnly": true
    },
    "tstl": {
        "luaTarget": "5.1",
        "luaLibImport": "inline",
        "trimExtensions": true,
        "luaPlugins": [
            { "name": "./plugins/defoldScriptExports.ts" },
        ]
    }
}